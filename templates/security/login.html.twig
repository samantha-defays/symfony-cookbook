{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content">
        <div class="container">
        <div class="row">
        
          <div class="offset-md-2 col-md-6 d-flex flex-column justify-content-center align-items-center" style="height:90vh;">
            <div class="card">
              <div class="card-header">
                <h5 class="title">Connexion</h5>
              </div>
              <div class="card-body">
                {{ form_start(form) }}
        
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        {{ form_row(form.username)}}
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        {{ form_row(form.password) }}
                      </div>
                    </div>
                  </div>
                  
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-fill btn-primary btn-block">Connexion</button>
              </div>
                {{ form_end(form) }}
            </div>
        </div>
      </div>
    </div>
    </div>
    </div>
{% endblock %}
